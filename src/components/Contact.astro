<section class="w-full px-4 py-24">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Google Maps -->
    <div class="w-full h-64 md:h-auto">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d492.64118041638716!2d-98.21888917559826!3d19.155836428624948!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2smx!4v1750202103331!5m2!1ses-419!2smx"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        class="w-full h-full rounded-lg shadow-md overflow-hidden"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <!-- Contact Info -->
    <div
      class="flex flex-col justify-center space-y-6 text-center md:text-left"
    >
      <div>
        <h2 class="text-2xl font-noto">Contáctame</h2>
        <p class="text-muted-foreground">Estamos aquí para ayudarte</p>
      </div>

      <div class="space-y-4">
        <p class="text-lg">
          📍 Dirección: <span class="font-medium">Manantiales numero 7, Séptima Secc los Reyes, 90790 Papalotla, Tlax.</span>
        </p>
        <p class="text-lg">
          📞 Teléfono:
          <a href="tel:+5213312256166" class="text-blue-600 hover:underline">
            +52 1 33 1225 6166
          </a>
        </p>
        <div class="text-lg">
          <p>🕒 Horarios:</p>
          <p>Lunes a Viernes: 10:00 AM – 6:00 PM</p>
          <p>Sábados: 10:00 AM – 2:00 PM</p>
          <p>Domingos: Cerrado</p>
        </div>
      </div>
    </div>
  </div>
</section>
